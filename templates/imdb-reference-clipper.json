{
	"schemaVersion": "0.1.0",
	"name": "IMDB reference",
	"behavior": "create",
	"noteNameFormat": "{{selector:.hero__primary-text|safe_name|trim}}",
	"path": "References",
	"noteContentFormat": "",
	"properties": [
		{
			"name": "categories",
			"value": "[[Movies]]",
			"type": "multitext"
		},
		{
			"name": "genre",
			"value": "{{selector:.ipc-chip-list a[href*='genre']|wikilink|join}}",
			"type": "multitext"
		},
		{
			"name": "imdbId",
			"value": "{{meta:property:imdb:pageConst}}",
			"type": "text"
		},
		{
			"name": "cover",
			"value": "{{image}}",
			"type": "text"
		},
		{
			"name": "director",
			"value": "{{description|split:\\\"Directed by \\\"|slice:1|split:\\\". With\\\"|first|split:\\\", \\\"|wikilink|join}}",
			"type": "multitext"
		},
		{
			"name": "cast",
			"value": "{{selector:.ipc-inline-list a[href*='name']|unique|wikilink|join}}",
			"type": "multitext"
		},
		{
			"name": "runtime",
			"value": "{{selector:#runtime .ipc-metadata-list-item__list-content-item--subText|first}}",
			"type": "number"
		},
		{
			"name": "year",
			"value": "{{selector:.hero__primary-text-suffix|split:\\\"â€“\\\"|first}}",
			"type": "number"
		},
		{
			"name": "rating",
			"value": "{{selector:.ipc-rating-star--currentUser}}",
			"type": "number"
		},
		{
			"name": "scoreImdb",
			"value": "{{selector:.ipc-rating-star--rating|first|round:1}}",
			"type": "number"
		},
		{
			"name": "last",
			"value": "",
			"type": "date"
		},
		{
			"name": "created",
			"value": "{{date}}",
			"type": "date"
		},
		{
			"name": "tags",
			"value": "movies, reviews, to-watch",
			"type": "multitext"
		}
	],
	"triggers": [
		"/^https:\\/\\/www\\.imdb\\.com\\/title\\/tt\\d+\\/reference\\/?$/"
	]
}